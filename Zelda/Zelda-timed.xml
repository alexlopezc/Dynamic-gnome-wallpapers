<background>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>7</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<!-- This animation will start at 7 AM. -->

<!-- We start with sunrise at 7 AM. It will remain up for 3 hour. -->
<static>
<duration>10800.0</duration>
<file>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunrise.jpeg</file>
</static>

<!-- Sunrise starts to transition to day at 10 AM. The transition lasts for 2 hours, ending at 12 PM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunrise.jpeg</from>
<to>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-morning.jpeg</to>
</transition>

<!-- We start with day at 12 PM. It will remain up for 4 hour. -->
<static>
<duration>14400.0</duration>
<file>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-morning.jpeg</file>
</static>

<!-- Morning starts to transition to sunset at 4 PM. The transition lasts for 2 hours, ending at 6 PM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-morning.jpeg</from>
<to>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunset.jpeg</to>
</transition>

<!-- It's 6 PM, we're showing the sunset image in full force now, for 2 hours ending at 7 PM. -->
<static>
<duration>3600.0</duration>
<file>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunset.jpeg</file>
</static>

<!-- It's 7 PM and it's going to start to get darker. This will transition for 2 hours up until 9PM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunset.jpeg</from>
<to>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-night.jpeg</to>
</transition>

<!-- It's midnight. It'll stay dark for 4 hours up until 5 AM. -->
<static>
<duration>28800.0</duration>
<file>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-night.jpeg</file>
</static>

<!-- It's 5 AM. We'll start transitioning to sunrise for 2 hours up until 7 AM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-night.jpeg</from>
<to>/usr/share/backgrounds/gnome/Zelda-timed/Zelda-sunrise.jpeg</to>
</transition>
</background>
